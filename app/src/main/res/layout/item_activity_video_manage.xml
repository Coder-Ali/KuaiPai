<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/crvVideoManageActivityItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="203dp">
                <ImageView
                    android:id="@+id/ivVideoManageActivityItemPicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:src="@drawable/item_video_moments_pic_1"
                    android:clickable="true"
                    android:scaleType="centerCrop" />
                <ImageView
                    android:id="@+id/ivVideoManageActivityItemUploadCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@color/image_cover_color" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/llVideoManageActivityItemUpload1"
                android:layout_width="56dp"
                android:orientation="horizontal"
                android:layout_marginTop="203dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:clickable="true"
                android:layout_height="30dp">
                <CheckBox
                    android:id="@+id/cbVideoManageActivityItemUpload1"
                    android:background="@drawable/community_icon_upload_pressed"
                    android:clickable="true"
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVideoManageActivityItemSelected2"
                android:layout_width="56dp"
                android:orientation="horizontal"
                android:layout_marginTop="203dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:clickable="true"
                android:visibility="gone"
                android:layout_height="30dp">

                <CheckBox
                    android:id="@+id/cbVideoManageActivityItemSelected2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/video_manage_fragment_item_icon_selected"
                    android:clickable="false" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvVideoManageActivityItemUploadingText"
                android:text="视频上传中"
                android:layout_marginTop="212dp"
                android:visibility="gone"
                android:textColor="@color/video_manage_uploading_text_color"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/shadows" />
</LinearLayout>